<?xml version="1.0" encoding="UTF-8" ?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../schema.xsd">

    <node id="container-main"
          width="100%"
          height="100%"
          background="#000000"
          on_spawn="setup_screen">

        <image id="background-holder"
               src="backgrounds/load-background-01.png"
               width="100%"
               height="100%"
               align_items="center"
               justify_content="center"
        >
            <node id="content-holder"
                  background="#000000ef"
                  width="100%"
                  height="100%"
                  align_items="center"
                  justify_content="center">

                <text id="loading-text" font_size="40" font_color="#fff">
                    Loading...
                </text>

            </node>
        </image>

    </node>

</template>