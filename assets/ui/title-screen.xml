<?xml version="1.0" encoding="UTF-8" ?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../schema.xsd">

    <node id="container-main"
          align_items="center"
          justify_content="center"
          width="100%"
          height="100%"
          background="#000000"
          on_spawn="play_life_cycle">

        <node id="title-content"
              align_items="center"
              justify_content="flex_start"
              flex_direction="column"
              width="50%"
              height="85%">

            <image id="mira-logo"
                   src="logos/mira-logo.png"
                   ease="cubic_in"
                   delay="0.8"
                   width="496px"
                   height="496px"
                   margin="50px"
            />

            <text id="mira-text"
                  font_size="19"
                  font_color="#ffffffff"
                  on_spawn="setup_mira_text">
                Press any key to start
            </text>

        </node>

    </node>

</template>