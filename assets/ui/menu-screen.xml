<?xml version="1.0" encoding="UTF-8" ?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../schema.xsd">

    <node id="container-main"
          align_items="center"
          justify_content="center"
          flex_direction="column"
          row_gap="20px"
          width="100%"
          height="100%"
          background="#000000"
          on_spawn="play_life_cycle">

        <image id="mira-logo"
               src="logos/mira-logo.png"
               ease="cubic_in"
               delay="0.8"
               width="382px"
               height="382px"
               margin="50px"
        />

        <button id="new-game"
                background="#00000000"
                hover:background="#FFFF8F71"
                border_radius="20px"
                width="350px"
                height="45px"
                ease="sine_in_out"
                delay="0.3s"
                justify_content="center"
                align_items="center"
                on_press="start_new_game">
            <text id="new-game-text" font_color="#fff" font_size="20">
                New Game
            </text>
        </button>

        <button id="settings"
                background="#00000000"
                hover:background="#FFFF8F71"
                border_radius="20px"
                width="350px"
                height="45px"
                ease="sine_in_out"
                delay="0.3s"
                justify_content="center"
                align_items="center">
            <text id="settings-text" font_color="#fff" font_size="20">
                Settings
            </text>
        </button>

        <button id="credits"
                background="#00000000"
                hover:background="#FFFF8F71"
                border_radius="20px"
                width="350px"
                height="45px"
                ease="sine_in_out"
                delay="0.3s"
                justify_content="center"
                align_items="center">
            <text id="credits-text" font_color="#fff" font_size="20">
                Credits
            </text>
        </button>

        <button id="quit"
                background="#00000000"
                hover:background="#FFFF8F71"
                border_radius="20px"
                width="350px"
                height="45px"
                ease="sine_in_out"
                delay="0.3s"
                justify_content="center"
                align_items="center">
            <text id="quit-text" font_color="#fff" font_size="20">
                Quit
            </text>
        </button>
    </node>

</template>